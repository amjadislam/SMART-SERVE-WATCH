<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.smartserve.watchapp.Views.fragments.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_waiterListFragment"
            app:destination="@id/waiterListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_paidBillFragment"
            app:destination="@id/paidBillFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.smartserve.watchapp.Views.fragments.NotificationFragment"
        android:label="NotificationFragment" />
    <fragment
        android:id="@+id/waiterListFragment"
        android:name="com.smartserve.watchapp.Views.fragments.WaiterListFragment"
        android:label="WaiterListFragment" />
    <fragment
        android:id="@+id/paidBillFragment"
        android:name="com.smartserve.watchapp.Views.fragments.PaidBillFragment"
        android:label="PaidBillFragment" />


</navigation>