<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/header_end_padding"
    android:paddingRight="@dimen/header_end_padding"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llHomeItem"
            android:background="@drawable/linearlayot_selector"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMenuTitle"
                android:layout_weight=".8"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:textSize="@dimen/_18sdp"
                android:gravity="start|center"
                android:layout_gravity="start|center"
                android:paddingLeft="@dimen/_30sdp"
                android:text="Notifications"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ivMenu"
                android:layout_weight=".2"
                android:layout_gravity="center"
                android:src="@drawable/icon_waiter"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_waiter"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView_menulist_itemMenuBadge"
            app:layout_anchorGravity="bottom|right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            android:textSize="15sp"
            android:background="@drawable/circle_red_dark"
            android:textColor="@color/white"
            android:text="1"
            android:textStyle="bold"
            android:gravity="center"
            android:translationZ="10dp" />
    </FrameLayout>


    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="New TextNew" />
</LinearLayout>
