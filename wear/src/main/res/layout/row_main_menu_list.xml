<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="@dimen/header_end_padding"
    android:paddingLeft="@dimen/header_end_padding"
    android:paddingRight="@dimen/header_end_padding"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView_menulist_itemMenuIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_waiter"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView_menulist_itemMenuBadge"
            app:layout_anchorGravity="bottom|right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            android:textSize="15sp"
            android:background="@drawable/circle_red_dark"
            android:textColor="@color/white"
            android:text="1"
            android:textStyle="bold"
            android:gravity="center"
            android:translationZ="10dp" />
    </FrameLayout>


    <TextView
        android:id="@+id/textView_menulist_itemMenuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="New TextNew" />
</LinearLayout>
