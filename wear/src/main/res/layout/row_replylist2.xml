    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="@dimen/header_end_padding"
    android:paddingLeft="@dimen/header_end_padding"
    android:paddingRight="@dimen/header_end_padding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_replylist_itemReplyIcon"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
